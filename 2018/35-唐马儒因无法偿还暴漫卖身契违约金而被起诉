  <div class="post-block">
    <link itemprop="mainEntityOfPage" href="https://blog.feedscoin.com/2018/35-%E5%94%90%E9%A9%AC%E5%84%92%E5%9B%A0%E6%97%A0%E6%B3%95%E5%81%BF%E8%BF%98%E6%9A%B4%E6%BC%AB%E5%8D%96%E8%BA%AB%E5%A5%91%E8%BF%9D%E7%BA%A6%E9%87%91%E8%80%8C%E8%A2%AB%E8%B5%B7%E8%AF%89">

    <span hidden itemprop="author" itemscope itemtype="http://schema.org/Person">
      <meta itemprop="name" content="">
